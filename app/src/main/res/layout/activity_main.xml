<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#33666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/radio_group"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:checkedButton="@id/rdo_target"
        android:clipChildren="false"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/rdo_target"
            android:drawableTop="@drawable/bg_main_target"
            style="@style/radiobutton_style"
            android:text="@string/rdo_target" />

        <RadioButton
            android:id="@+id/rdo_square"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_main_room"
            android:text="@string/rdo_square" />

        <RadioButton
            android:id="@+id/rdo_add"
            style="@style/radiobutton_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:button="@null"
            android:clickable="false"
            android:visibility="invisible"
            android:drawableTop="@drawable/add"
            android:gravity="center" />


        <RadioButton
            android:id="@+id/rdo_chat"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_main_chat"
            android:text="@string/rdo_chat" />

        <RadioButton
            android:id="@+id/rdo_mine"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_main_mine"
            android:text="@string/rdo_mine" />
    </RadioGroup>

    <ImageView
        android:id="@+id/image_pub_add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/add"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>