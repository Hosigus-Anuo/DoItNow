<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#33666666"
        app:layout_constraintBottom_toTopOf="@id/rg_menu_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/rg_menu_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:background="@color/colorWhite"
        android:checkedButton="@id/rg_clock_main"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rg_clock_main"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_clock_main"
            android:text="@string/rg_clock_main" />

        <RadioButton
            android:id="@+id/rb_square_main"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_square_main"
            android:text="@string/rb_square_main" />

        <RadioButton
            android:id="@+id/rb_flag_main"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_flag_main"
            android:text="@string/rb_flag_main" />

        <RadioButton
            android:id="@+id/rg_mine_main"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/bg_main_mine"
            android:text="@string/rg_mine_main" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>