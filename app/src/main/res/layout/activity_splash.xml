<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/layer_list_splash" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8888889" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gl_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/splashBackgroundColorLighter">

        <ImageView
            android:layout_width="145dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_splash_bottom"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_splash_skip"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"
            android:background="@drawable/shape_btn_splash_skip"
            android:textColor="#C0C0C0"
            tools:text="@string/btn_splash_skip" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>