<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_register_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/load_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_register_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="@string/edt_login_name"
        android:inputType="text"
        android:textSize="17sp"
        android:textColor="@color/colorText"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_register_user"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/edt_register_name"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_register_name"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_register_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/load_password"
        app:layout_constraintTop_toBottomOf="@id/edt_register_name"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_register_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edt_register_name"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="textPassword"
        android:hint="@string/edt_login_password"
        android:textSize="17sp"
        android:textColor="@color/colorText"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/edt_register_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/edt_register_password"
        app:layout_constraintTop_toBottomOf="@id/edt_register_password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but_register_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edt_register_password"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_login"
        android:text="@string/btn_register_login"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/edt_register_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>