    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_axis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/axis"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_axis_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_mine_sign_out"
        android:maxEms="20"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp"
        android:text="@string/txt_square_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/tv_axis_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_axis" />

    <TextView
        android:id="@+id/tv_axis_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/txt_square_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_axis_content" />
