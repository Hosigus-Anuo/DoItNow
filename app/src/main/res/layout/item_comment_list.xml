<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="5dp"
    android:paddingEnd="8dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_portrait_comment"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/add"
        app:layout_constraintBottom_toTopOf="@id/tv_content_comment"
        app:layout_constraintEnd_toStartOf="@id/tv_name_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="16"
        android:text="@string/txt_square_name"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_content_comment"
        app:layout_constraintStart_toEndOf="@id/img_portrait_comment"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_content_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/txt_square_content"
        android:textColor="@color/colorText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_portrait_comment" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

